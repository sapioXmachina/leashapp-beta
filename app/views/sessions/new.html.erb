<div class="col-md-6 offset-md-3">
  <h1>Log In</h1>
  <hr>
  <h4>Enter email and password below</h4>
  <hr>

  <%= form_with url: log_in_path do |f| %>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :email, "Email :", class: "input-group-text fw-bold" %>
      </div>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :password, "Password :", class: "input-group-text fw-bold" %>
      </div>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="row pb-2 pt-2 mb-3 ps-2 pe-2 d-flex justify-content-between">
      <div class="col-auto me ps-2 pe-2 pb-2">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
      <div class="col-auto ps-2 pe-2">
        <%= link_to "Forgot password?", reset_password_path, class: "btn btn-secondary" %>
      </div>
      <div class="col-auto ps-2 pe-2">
        <%= link_to "Reset", log_in_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
