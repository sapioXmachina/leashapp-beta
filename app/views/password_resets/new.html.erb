<div class="col-md-6 offset-md-3">
  <h1>Forgot your password?</h1>
  <hr>
  <h4>Enter email below to reset the password</h4>
  <hr>
  
  <%= form_with url: reset_password_path do |f| %>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :email, "Email :", class: "input-group-text fw-bold" %>
      </div>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    
    <div class="row pb-2 pt-2 mb-3 ps-2 pe-2 d-flex justify-content-between">
      <div class="col-auto me ps-2 pe-2 pb-2">
        <%= f.submit "Reset Password", class: "btn btn-primary" %>
      </div>
      <div class="col-auto ps-2 pe-2">
        <%= link_to "Cancel", log_in_path, class: "btn btn-secondary" %>
      </div>
      <div class="col-auto ps-2 pe-2">
        <%= link_to "Clear", reset_password_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
