<% if flash[:notice] %>
  <div class="alert alert-info alert-dismissible fade show" role="alert" id="flashalerts">
    <div><%= flash[:notice] %></div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

