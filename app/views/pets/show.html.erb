<div class="row align-items-center">
  <div class="col-auto me">
    <h1><%= @pet.name %></h1>
  </div>
  <div class="col-auto me-auto">
    <%= link_to "Edit Pet", edit_pet_path, class: "btn btn-primary" %>
  </div>
  <div class="col-auto">
    <%= link_to "View All Pets", manage_pets_path, class: "btn btn-secondary" %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-auto me-auto">
    <span class="fw-bold">Updated:</span> <%= @pet.updated_at&.strftime("%m/%d/%Y @%I:%M %p") %>
  </div>
  <div class="col-auto">
    <span class="fw-bold">Created:</span> <%= @pet.created_at&.strftime("%m/%d/%Y") %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-sm">
    <% if @pet.photo.attached? %>
      <%= image_tag @pet.photo, class: "img-fluid", alt: "Responsive image" %>
    <% else %>
      <%= image_tag "pet-dog-leash-250.png", class: "img-fluid", alt: "Responsive image" %>
    <% end %>
  </div>
  <div class="col-sm">
    <p>
      <strong>Account:</strong> <%= @pet.account.account_name %>
    </p>
    <p>
      <strong>Client:</strong> <%= @pet.client.name %>
    </p>
    <p>
      <strong>Name:</strong> <%= @pet.name %>
    </p>
    <p>
      <strong>Nickname:</strong> <%= @pet.nickname %>
    </p>
    <p>
      <strong>Sex:</strong> <%= @pet.sex %>
    </p>
    <p>
      <strong>Age:</strong> <%= @pet.age %>
    </p>
    <p>
      <strong>Birthday:</strong> <%= @pet.birthday&.strftime("%b %-d '%y") %>
    </p>
  </div>
  <div class="col-sm">
    <p>
      <strong>Breed:</strong> <%= @pet.breed %>
    </p>
    <p>
      <strong>Neutered:</strong> <%= @pet.neutered %>
    </p>
    <p>
      <strong>Weight:</strong> <%= @pet.weight %>
    </p>
    <p>
      <strong>Coat:</strong> <%= @pet.coat %>
    </p>
    <p>
      <strong>Eye Color:</strong> <%= @pet.eyecolor %>
    </p>
    <p>
      <strong>Features:</strong> <%= @pet.features %>
    </p>
  </div>
  <div class="col-sm">
    <p>
      <strong>Allergies:</strong> <%= @pet.allergies %>
    </p>
    <p>
      <strong>Medical History:</strong> <%= @pet.medical_history %>
    </p>
    <p>
      <strong>Group Play?:</strong> <%= @pet.groups %>
    </p>
    <p>
      <strong>Puppy Play?:</strong> <%= @pet.puppies %>
    </p>
    <p>
      <strong>Favorite Toys:</strong> <%= @pet.toys %>
    </p>
    <p>
      <strong>Favorite Treats:</strong> <%= @pet.treats %>
    </p>
    <p>
      <strong>Additional Notes:</strong> <%= @pet.notes %>
    </p>
    <p>
      <strong>Schedule:</strong> <%= @pet.schedule %>
    </p>
  </div>
  <div class="col-auto">
    <p>
      <span class="fw-bold">Referral Code:</span>
        [<% if @pet.account.referral_key.nil? %>
          <span class="text-danger">*INACTIVE*
        <% else %>
          <span class="text-success"><%= @pet.account.referral_key %>
        <% end %></span>]
    </p>
    <p>
      <strong>Account:</strong> <%= @pet.account.account_name %>
    </p>
    <p>
      <strong>Client:</strong> <%= @pet.client.name %>
    </p>
  </div>
</div>
