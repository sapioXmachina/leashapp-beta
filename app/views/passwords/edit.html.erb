<div class="col-md-6 offset-md-3">
  <h1>Change Password</h1>
  <hr>
  <h4>Update your password below</h4>
  <hr>
  
  <%= form_with model: Current.user, url: edit_password_path do |f| %>
    <% if f.object.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <% f.object.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>

    
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :account, "Account :", class: "input-group-text fw-bold" %>
      </div>
      <input class="form-control" type="text" value="<%= Current.user.account.account_name %>" aria-label="account" disabled readonly>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :email, "Email :", class: "input-group-text fw-bold" %>
      </div>
      <input class="form-control" type="text" value="<%= Current.user.email %>" aria-label="email" disabled readonly>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :password, "New Password :", class: "input-group-text fw-bold" %>
      </div>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :password_confirmation, "Confirm Password :", class: "input-group-text fw-bold" %>
      </div>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="row pb-2 pt-2 mb-3 ps-2 pe-2 d-flex justify-content-between">
      <div class="col-auto me ps-2 pe-2 pb-2">
        <%= f.submit "Update Password", class: "btn btn-primary" %>
      </div>
      <div class="col-auto ps-2 pe-2">
        <%= link_to "Edit Profile", user_edit_path, class: "btn btn-secondary" %>
      </div>
      <div class="col-auto ps-2 pe-2">
        <%= link_to "Reset", edit_password_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
